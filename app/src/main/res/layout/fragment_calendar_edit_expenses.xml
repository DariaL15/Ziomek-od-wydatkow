<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.expenses"
    android:id="@+id/calendar_edit_expenses"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redlight"
    android:padding="10dp"
    tools:context=".CalendarEditExpensesFragment"
    android:gravity="center">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:padding="300dp"
            app:cardCornerRadius="35dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext2red"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:id="@+id/select_date_text3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_day_text"
                    android:textColor="@color/redlight"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <CalendarView
                    android:id="@+id/calendar_view3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:id="@+id/selected_date3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:hint="@string/selected_day"
                    android:textColorHint="@color/redlight"
                    android:textColor="@color/redlight"
                    android:textSize="20sp"
                    android:textStyle="italic"/>

                <Button
                    android:id="@+id/confirm_button_fix_3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext2red"
                    android:text="@string/ok"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</RelativeLayout>