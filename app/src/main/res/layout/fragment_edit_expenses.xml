<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.expenses"
    android:id="@+id/edit_expenses_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:context=".EditExpensesFragment">


    <LinearLayout
        android:id="@+id/toolbar_addtransaction3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">







        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <EditText
                    android:id="@+id/amount_1"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:backgroundTint="@color/redlight"
                    android:gravity="center"
                    android:hint="@string/amount"
                    android:padding="15dp"
                    android:textColor="@color/redlight"
                    android:textColorHint="@color/redlightlight"
                    android:textSize="25sp"
                    android:inputType="numberDecimal"/>

                <TextView
                    android:id="@+id/zloty3_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/zloty"
                    android:textAlignment="center"
                    android:textColor="@color/redlight"
                    android:textSize="30sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/choose_date_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:text="@string/date"
                    android:textColor="@color/redlight"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/select_date_end_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|top"
                    android:hint="@string/selected_day"
                    android:paddingLeft="30dp"
                    android:textColorHint="@color/redlight"
                    android:textSize="10sp"
                    android:textColor="@color/redlight"
                    android:textStyle="italic"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="30dp"
                android:layout_weight="0.9"
                android:gravity="center_horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/today_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/edittext"
                    android:gravity="center"
                    android:text="@string/today"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/yesterday_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/edittext"
                    android:gravity="center"
                    android:text="@string/yesterday"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:visibility="visible" />

                <Button

                    android:id="@+id/choose_calendar_button_1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/edittext"
                    android:drawableTop="@drawable/calendar"
                    android:gravity="center"
                    android:visibility="visible" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/choose_category_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:text="@string/category"
                    android:textColor="@color/redlight"
                    android:textSize="14sp"
                    android:visibility="visible" />



            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="0.9"
                android:gravity="center_horizontal"
                android:visibility="visible">

                <Spinner
                    android:id="@+id/category_spinner_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/edittextfullred"
                    android:gravity="center"
                    style="@style/SpinnerStyle1"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/notes_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center_vertical"
                android:paddingLeft="30dp"
                android:text="@string/notes"
                android:textColor="@color/redlight"
                android:textSize="14sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/noteEditText_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="0.9"
                android:background="@drawable/edittext2red"
                android:gravity="start|top"
                android:hint="@string/notes_text"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:padding="30dp"
                android:scrollbars="vertical"
                android:textColorHint="@color/redlightlight"
                android:textSize="12sp"
                android:visibility="visible" />


        </LinearLayout>

        <Button
            android:id="@+id/confirm_button2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/edittext2red"
            android:text="@string/ok"
            android:textSize="13sp"
            android:textStyle="bold" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>