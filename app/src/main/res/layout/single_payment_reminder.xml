<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="315dp"
    android:layout_height="wrap_content"
    android:background="@color/green_light"
    app:layout_constraintBottom_toBottomOf="parent"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/zlecenie_stale_text"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edittext2white"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/m_green"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/zlecenie_stale_amount"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edittext2white"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/m_green"
                android:textSize="10dp"

                />

            <TextView
                android:id="@+id/zlecenie_stale_date"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/edittext2white"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/m_green"
                android:textSize="10dp" />

            <CheckBox
                android:id="@+id/zlecenie_stale_checkBox"
                android:layout_width="30dp"
                android:layout_height="25dp" />


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>